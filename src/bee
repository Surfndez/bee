#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

################################################################################
# log
################################################################################

BEE_QUIET=0

bee::log_echo() {
  if ((!BEE_QUIET)); then
    echo "$*"
  fi
}

bee::log() {
  bee::log_echo "🐝 $*"
}

bee::log_info() {
  bee::log_echo "################################################################################"
  bee::log "$*"
  bee::log_echo "################################################################################"
}

bee::log_func() {
  bee::log_info "${FUNCNAME[1]} $*"
}

bee::log_warn() {
  echo "🟠 $*" >&2
}

bee::log_error() {
  echo "🔴 $*" >&2
}

bee::log_var() {
  echo "${!1}"
}

source src/bee-run.sh
if [[ "${BASH_SOURCE[0]}" == "$0" ]]; then
  bee::run "$@"
fi
