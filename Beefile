BEE_PROJECT=bee
BEE_PLUGINS=(changelog github version)

# changelog => version
CHANGELOG_PATH=CHANGELOG.md
CHANGELOG_CHANGES=CHANGES.md
CHANGELOG_URL=https://github.com/sschmid/bee
CHANGELOG_TAG_PREFIX=""
CHANGELOG_TAG_SUFFIX=""

# github => version
GITHUB_CHANGES=CHANGES.md
GITHUB_RELEASE_PREFIX="${BEE_PROJECT}-"
GITHUB_REPO="sschmid/bee"
GITHUB_ATTACHMENTS_ZIP=()

# version
VERSION_PATH=version.txt

bee::release() {
  local version
  version="$(version::read)"
  changelog::merge
  git add .
  git commit -am "Release ${version}"
  git tag "${version}"
  git push origin main
  git push --tags
  log "bzzz... giving GitHub some time to process..."
  sleep 10
  github::create_release
}

bee::release_major() {
  version::bump_major
  bee::release
}

bee::release_minor() {
  version::bump_minor
  bee::release
}

bee::release_patch() {
  version::bump_patch
  bee::release
}
